<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include layout="@layout/common_topbar_upload" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="270.0dip"
            android:layout_centerInParent="true" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    style="@style/common_card_layout.margin_L_R"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_listitem_singleline_high"
                    android:background="@drawable/common_listitem_top_selector" >

                    <TextView
                        android:id="@+id/repair_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:text="安装地址："
                        android:textColor="#ff333333"
                        android:textSize="16.0dip" />

                    <TextView
                        android:id="@+id/repair_address_value"
                        style="?android:attr/textViewStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_toRightOf="@id/repair_address"
                        android:background="@null"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="1"
                        android:textColor="#ff999999"
                        android:textSize="14.0dip" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:background="@drawable/common_divider_line"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/common_card_layout.margin_L_R"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_listitem_singleline_high"
                    android:background="@drawable/common_listitem_middle_selector" >

                    <TextView
                        android:id="@+id/oldbarcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:text="旧表条码："
                        android:textColor="#ff333333"
                        android:textSize="16.0dip" />

                    <TextView
                        android:id="@+id/repair_obc_value"
                        style="?android:attr/textViewStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_toRightOf="@id/oldbarcode"
                        android:background="@null"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="#ff999999"
                        android:textSize="14.0dip" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:background="@drawable/common_divider_line"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/common_card_layout.margin_L_R"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_listitem_singleline_high"
                    android:background="@drawable/common_listitem_middle_selector" >

                    <TextView
                        android:id="@+id/newbarcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:text="新表条码："
                        android:textColor="#ff333333"
                        android:textSize="16.0dip" />

                    <TextView
                        android:id="@+id/repair_nbc_value"
                        style="?android:attr/textViewStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_toRightOf="@id/newbarcode"
                        android:background="@null"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="#ff999999"
                        android:textSize="14.0dip" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:background="@drawable/common_divider_line"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/common_card_layout.margin_L_R"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_listitem_singleline_high"
                    android:background="@drawable/common_listitem_middle_selector" >

                    <TextView
                        android:id="@+id/oldindication"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:text="旧表读数："
                        android:textColor="#ff333333"
                        android:textSize="16.0dip" />

                    <TextView
                        android:id="@+id/repair_oi_value"
                        style="?android:attr/textViewStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_toRightOf="@id/oldindication"
                        android:background="@null"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="#ff999999"
                        android:textSize="14.0dip" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:background="@drawable/common_divider_line"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/common_card_layout.margin_L_R"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_listitem_singleline_high"
                    android:background="@drawable/common_listitem_middle_selector" >

                    <TextView
                        android:id="@+id/newindication"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:text="新表读数："
                        android:textColor="#ff333333"
                        android:textSize="16.0dip" />

                    <TextView
                        android:id="@+id/repair_ni_value"
                        style="?android:attr/textViewStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_toRightOf="@id/newindication"
                        android:background="@null"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="#ff999999"
                        android:textSize="14.0dip" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:background="@drawable/common_divider_line"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/common_card_layout.margin_L_R"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_listitem_singleline_high"
                    android:background="@drawable/common_listitem_middle_selector" >

                    <TextView
                        android:id="@+id/failuretype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:text="故障类型："
                        android:textColor="#ff333333"
                        android:textSize="16.0dip" />

                    <TextView
                        android:id="@+id/repair_ft_value"
                        style="?android:attr/textViewStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_toRightOf="@id/failuretype"
                        android:background="@null"
                        android:gravity="center"
                        android:maxLines="5"
                        android:textColor="#ff999999"
                        android:textSize="14.0dip" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:background="@drawable/common_divider_line"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/common_card_layout.margin_L_R"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_listitem_singleline_high"
                    android:background="@drawable/common_listitem_middle_selector" >

                    <TextView
                        android:id="@+id/repair_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:text="故障描述："
                        android:textColor="#ff333333"
                        android:textSize="16.0dip" />

                    <TextView
                        android:id="@+id/repair_d_value"
                        style="?android:attr/textViewStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_toRightOf="@id/repair_description"
                        android:background="@null"
                        android:gravity="center"
                        android:maxLines="5"
                        android:textColor="#ff999999"
                        android:textSize="14.0dip" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:background="@drawable/common_divider_line"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/common_card_layout.margin_L_R"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_listitem_singleline_high"
                    android:background="@drawable/common_listitem_middle_selector" >

                    <TextView
                        android:id="@+id/repair_userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:text="操作人员："
                        android:textColor="#ff333333"
                        android:textSize="16.0dip" />

                    <TextView
                        android:id="@+id/repair_un_value"
                        style="?android:attr/textViewStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_toRightOf="@id/repair_userName"
                        android:background="@null"
                        android:gravity="center"
                        android:maxLines="5"
                        android:textColor="#ff999999"
                        android:textSize="14.0dip" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:background="@drawable/common_divider_line"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/common_card_layout.margin_L_R"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_listitem_singleline_high"
                    android:background="@drawable/common_listitem_bottom_selector" >

                    <TextView
                        android:id="@+id/repair_finishTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:text="完成时间："
                        android:textColor="#ff333333"
                        android:textSize="16.0dip" />

                    <TextView
                        android:id="@+id/repair_finishtime_value"
                        style="?android:attr/textViewStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_toRightOf="@id/repair_finishTime"
                        android:background="@null"
                        android:gravity="center"
                        android:maxLines="5"
                        android:textColor="#ff999999"
                        android:textSize="14.0dip" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:background="@drawable/common_divider_line"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/upload_btn_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip" >

            <ImageView
                android:id="@+id/horizontal_line1"
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_gravity="center_vertical"
                android:background="@drawable/common_divider_line"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:id="@+id/tag"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/horizontal_line1"
                android:layout_marginTop="3.0dip"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip" >

                <RelativeLayout
                    android:id="@+id/upload_now"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/common_upload_button_selector"
                    android:clickable="true" >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:focusable="false"
                        android:text="现在上传"
                        android:textColor="#ff666666"
                        android:textSize="12.0dip" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/divider_img"
                    android:layout_width="1.0px"
                    android:layout_height="20.0dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="4.0dip"
                    android:background="@drawable/vertial_divider_line"
                    android:contentDescription="@string/contentDescription" />

                <RelativeLayout
                    android:id="@+id/upload_later"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/common_upload_button_selector"
                    android:clickable="true" >

                    <Button
                        android:id="@+id/btn_later"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:focusable="false"
                        android:text="稍后上传"
                        android:textColor="#ff666666"
                        android:textSize="12.0dip" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/horizontal_line2"
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_below="@id/tag"
                android:layout_gravity="center_vertical"
                android:background="@drawable/common_divider_line"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>