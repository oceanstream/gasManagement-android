<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:baidu="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="10.0dip"
    android:layout_marginRight="10.0dip"
    android:layout_marginTop="9.0dip"
    android:background="@drawable/listitem_install_background_selector" >

    <LinearLayout
        android:id="@+id/content_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="12.0dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/busstop_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12.0dip"
            android:contentDescription="@string/app_name"
            android:gravity="center_vertical"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/content_title_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/content_name_repair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="000"
                android:textColor="#ff333333"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/isComplete_repair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="2dp"
                android:text="未完成" />

            <TextView
                android:id="@+id/isUpload_repair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="2dp"
                android:text="未上传" />
            
            <TextView 
                android:id="@+id/isChanged_repair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="2dp"
                android:text="已换表"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_reason"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_left"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@drawable/bg_lookaround_reason"
        android:orientation="vertical"
        android:padding="8.0dip" >

        <TextView
            android:id="@+id/address_repair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="111"
            android:textColor="#ff666666"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/postDate_repair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="222"
            android:textColor="#ff666666"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/userName_repair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="333"
            android:textColor="#ff666666"
            android:textSize="12.0sp" />
    </LinearLayout>

    <TextView
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:layout_below="@id/content_reason" />


    
    <ImageView 
        android:id="@+id/clearTag_repair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/clear"
        />

</RelativeLayout>