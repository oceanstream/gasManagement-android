<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
:</style>

    <style name="CommonTopBarRightImageText">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ff008afc</item>
    </style>

    <style name="CommonTopBarMiddleText">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">#ff333333</item>
    </style>
    
        <style name="common_card_layout">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    
    <style name="common_card_layout.margin_L_R" parent="@style/common_card_layout">
        <item name="android:layout_marginLeft">@dimen/common_card_layout_left</item>
        <item name="android:layout_marginRight">@dimen/common_card_layout_right</item>
    </style>

</resources>